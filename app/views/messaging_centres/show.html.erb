<p id="notice"><%= notice %></p>

<h1><%= t('hello') %> <%= current_user.first_name %></h1>

<% if @students.length > 0  %>
  <div class="container">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Grade</th>
      </tr>
      </thead>
      <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.name, student %></td>
        <td><%= link_to student.student_class.name, student %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>


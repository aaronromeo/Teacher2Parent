<%= simple_form_for [@student, @adhoc_message], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :feedbacks, label_method: :comment %>
  <div class="form-actions">
    <%= f.submit 'Save', :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                @student, :class => 'btn' %>
  </div>
<% end %>

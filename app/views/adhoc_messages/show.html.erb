<%- model_class = AdhocMessage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:isNew) %>:</strong></dt>
  <dd><%= @adhoc_message.isNew %></dd>
  <dt><strong><%= model_class.human_attribute_name(:student_id) %>:</strong></dt>
  <dd><%= @adhoc_message.student_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sender_id) %>:</strong></dt>
  <dd><%= @adhoc_message.sender.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recipient_id) %>:</strong></dt>
  <dd><%= @adhoc_message.recipient.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:feedbacks) %>:</strong></dt>
  <dd><%= @adhoc_message.feedbacks %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              student_adhoc_messages_path(@student), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_adhoc_message_path(@student, @adhoc_message), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_adhoc_message_path(@student, @adhoc_message),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
